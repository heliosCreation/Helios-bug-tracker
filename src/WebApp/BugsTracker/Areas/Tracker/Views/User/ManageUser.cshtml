@model List<BugTracker.Application.ViewModel.UserViewModel>

<div class="py-4 row d-flex justify-content-around h-50">

    <div class="first-row col-11 p-0">
        <div class="first-row-header row d-flex px-3 py-2 w-100 justify-content-between align-items-center">
            <p class="m-0">
                Show
                <select>
                    @for (int i = 5; i < 20; i++)
                    {
                        <option value="@(i)">@i</option>
                    }
                </select>
                entries out of <span class="text-purple"> 47 </span>
            </p>

            <div class="research-input-wrapper">
                <input type="text" class="research-input" placeholder="Reseach..." />
                <i class="fas fa-search"></i>
            </div>

            <a class="blue-btn" data-toggle="modal" data-target="#manageUserRoleModal">Assign user(s) role</a>

        </div>

        <div class="table-responsive w-100">
            <table class="table ticket-list-table">
                <thead class="ticket-thead">
                    <tr>
                        <th scope="col" class="text-muted">Name</th>
                        <th scope="col" class="text-muted">Email</th>
                        <th scope="col" class="text-muted">Role</th>
                        <th scope="col" class="text-muted text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td scope="row" class="text-purple"><a data-toggle="modal" data-target="#showTicketDetails" class="ticket-link">@user.Username</a></td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#editUserRoleModal">Edit</a>
                                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#LockUserModal">Lock <i class="fa fa-lock" aria-hidden="true"></i></a>
                                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#deleteUserModal">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row d-flex justify-content-start align-items-start w-100">
            <div class="pagination-holder d-flex p-2 ml-auto">
                <div class="purple-circle"><i class="fas fa-angle-left"></i></div>
                <div class="purple-circle filled">1</div>
                <div class="purple-circle">2</div>
                <div class="purple-circle"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

</div>


<!-- Modal TODO partialView-->
<div class="modal fade" id="editUserRoleModal" tabindex="-1" role="dialog" aria-labelledby="editUserRoleModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update user role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body d-flex">
                    <div class="form-group col-6">
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-5 m-0">Admin</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-5 m-0">Dev</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-5 m-0">Q.A</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>

                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-5 m-0">N/A</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                    </div>

                    <div class="form-group col-6">
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-7  m-0">Demo admin</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-7  m-0">Demo dev</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                        <div class="d-flex justify-content-start align-items-center">
                            <label for="Name" class="col-7  m-0">Demo Q.A</label>
                            <input type="checkbox" id="recipient-name" class="col-1">
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-success">Update</button>
                </div>

            </form>

        </div>
    </div>
</div>


<div class="modal fade" id="manageUserRoleModal" tabindex="-1" role="dialog" aria-labelledby="manageUserRoleModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center align-items-center">
                <h5 class="modal-title" id="ticket-details-modal-label">Add user(s) to role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <form class="col-12 ">
                    <div class="form-group d-flex flex-column justify-content-around align-items-center">
                        <label for="userSelect">Select user(s)</label>
                        <select multiple class="w-50">
                            <option>Quentin Couissinier</option>
                            <option>John Doe</option>
                            <option>Jane Doe</option>
                            <option>Jack Elfman</option>
                            <option>Larry TheBird</option>
                        </select>
                    </div>

                    <div class="form-group d-flex flex-column justify-content-around align-items-center">
                        <label for="roleSelect">Select role</label>
                        <select class="w-50">
                            <option selected>N/A</option>
                            <option>Dev</option>
                            <option>Q.A</option>
                            <option>Admin</option>

                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input type="submit" class="green-btn px-4" value="Update" />
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="deleteUserModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLongTitle">Delete user <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body text-center">
                    <p>Are you sure you want to delete the user <span class="text-purple font-weight-bold">John Doe</span> ?</p>
                    <p>The deletion of this information is irreversible, and will delete every accesses for this user.</p>
                    <p>Type <span class="text-green">Synchronize</span> to authorize the operation:</p>
                    <input type="text"/>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="green-btn">Delete User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="LockUserModal" tabindex="-1" role="dialog" aria-labelledby="LockUserModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Lock user <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to Lock the user <span class="text-purple font-weight-bold">John Doe</span> ?</p>
                <p>User will bel locked from accessing any resource.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="green-btn">Lock User</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/lib/Chart.js/chart.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#sectionName").text("User Management");

            $("#sidebar ul li.active").removeClass("active");
            $("#user-management-link").addClass("active");

        });


    </script>
}